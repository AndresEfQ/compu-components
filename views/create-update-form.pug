extends layout 

block content 

  div(class="container create-brand-form")
    h1 #{formTitle}
    form(method="post" action=action)
      div(class="form-floating mb-3")
        input(type="text" class="form-control" id="name" placeholder="Brand Name" value=(data ? data.name : ""))
        label(for="name" class="form-label") Brand Name
      div(class="mb-3")
        label(for="description" class="form-label white-label") Description
        textarea(class="form-control" id="description" rows="7" cols="33") #{data ? data.description : ""}
      img(src=(data ? data.imgUrl : "/images/image.svg") alt="component image" class="img-thumbnail list-img align-self-center")
      div(class="mb-3")
        label(for="formFile" class="form-label white-label") Brand Picture
        input(class="form-control" type="file" id="formFile")
      button(type="submit" class="btn btn-primary") Submit
